<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F180BD"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Shake Detection Title -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="305dp"
        android:layout_height="142dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/shakeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shake Detected!"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:gravity="center" />

    <!-- Shake Count Display -->
    <androidx.cardview.widget.CardView
        android:id="@+id/shakeCountCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#FFFFFF">

        <TextView
            android:id="@+id/shakeCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Shake Count: 0"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333" />

    </androidx.cardview.widget.CardView>

    <!-- Return Message Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/returnMessageCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:backgroundTint="#FFFFFF">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Your shake alert has been triggered. Notifying your emergency contacts."
            android:textColor="#333333"
            android:textSize="18sp"
            android:lineSpacingExtra="4dp" />

    </androidx.cardview.widget.CardView>

    <!-- Status Icon -->
    <ImageView
        android:id="@+id/statusIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:src="@android:drawable/ic_dialog_alert"
        android:tint="#EB0932" />

</LinearLayout>
