<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F180BD"
    tools:context=".MainActivity">

    <!-- SOS Confirmation Title -->
    <TextView
        android:id="@+id/sosTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOS Alert Sent!"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp" />

    <!-- Return Message Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/returnMessageCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/sosTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#FFFFFF">

        <TextView
            android:id="@+id/returnMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Emergency alert delivered successfully. Stay calm, youâ€™re not alone. Help is nearby."
            android:textColor="#333333"
            android:textSize="18sp"
            android:lineSpacingExtra="4dp" />

    </androidx.cardview.widget.CardView>

    <!-- Confirmation Icon -->
    <ImageView
        android:id="@+id/confirmationIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="459dp"
        android:src="@android:drawable/ic_dialog_info"
        android:tint="#D00C36"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/returnMessageCard" />

</androidx.constraintlayout.widget.ConstraintLayout>
